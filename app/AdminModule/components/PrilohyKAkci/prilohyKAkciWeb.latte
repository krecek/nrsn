{if $seznam_priloh}
<div class="seznam_priloh">
<table>
{foreach $seznam_priloh as $typ=>$prilohy}
    <tr>
        <th class='left'>{$typy_priloh[$typ]}</th>
        <td>
        {foreach $prilohy as $adresa=>$priloha}
            {first}<ul>{/first}
                <li> {if $priloha['je_obrazek']}<img src="{$basePath}/css/ico-foto.png" alt="x" title="zobrazit"/>{else}<img src="{$basePath}/{$priloha['nahled']}" alt="" title="zobrazit"/>{/if} <a href="{$basePath}/{$adresa}">{$priloha['nazev']|truncate:60}</a></li>
                {last}</ul>{/last}
        {/foreach}
        </td>
    </tr>
{/foreach}
</table>
</div>
{/if}
{if $zobrazit_galerii}
{control galerie}
{/if}